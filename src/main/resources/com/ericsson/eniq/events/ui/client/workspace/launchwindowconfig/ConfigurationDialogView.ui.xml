<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resourceBundle'
             type='com.ericsson.eniq.events.ui.client.workspace.launchwindowconfig.ConfigurationDialogResourceBundle'/>


    <ui:style>
        .container {
            -webkit-user-select: none;
            -moz-user-select: -moz-none;
            user-select: none;
            height: 100%;
            width: 100%;
            display: table;
            table-layout: fixed;
            overflow: visible;
        }

        .container>div {
            display: table-row;
        }

        .container>div:LAST-CHILD {
            height: 60px;
        }

        .bodyPanel {
            top: 0;
            left: 0;
            right: 0;
            bottom: 61px;
        }

        .buttonHolder {
            vertical-align: middle;
            height: 100%;
            width: 100%;
            border-top: 1px solid lightgrey;
        }

        .wsButton {
            width: 100px;
        }

        .footer {
            font-size: 11px;
            height: 20px;
            width: 100%;
            position: absolute;
            bottom: 0px;
            left: 0px;
            border-radius: 0px 0px 10px 10px;
            border-top: 1px solid #cfcece;

            background-color: #e3e3e3;
            background-image: linear-gradient(top, rgb(240, 240, 240) 0%, rgb(255, 255, 255) 100%);
            background-image: literal('-moz-linear-gradient(top, rgb(240, 240, 240) 0%, rgb(255, 255, 255) 100%)');
            background-image: literal('-webkit-linear-gradient(top, rgb(240, 240, 240) 0%, rgb(255, 255, 255) 100%)');
            background-image: literal('-ms-linear-gradient(top, rgb(240, 240, 240) 0%, rgb(255, 255, 255) 100%)');
        }

        .statusBar {
            vertical-align: middle;
            display: table-cell;
            height: 21px;
        }

        .infoIcon {
            float: left;
            margin-left: 70px;
        }

        .statusLabel {
            color: #333333;
            font-family: "Arial";
            font-size: 11px;
            margin-left: 5px;
            float: left;
        }

    </ui:style>
    <g:HTMLPanel styleName="{style.container}">
        <div>
            <g:FlowPanel ui:field="bodyPanel" styleName="{style.bodyPanel}">
            </g:FlowPanel>
        </div>
        <div>
            <g:HorizontalPanel styleName="{style.buttonHolder}" spacing="6">
                <g:cell horizontalAlignment="ALIGN_RIGHT">
                    <g:Button ui:field="launchBtn" addStyleNames="{style.wsButton}" text="Launch (0)" enabled="true"/>
                </g:cell>
                <g:cell horizontalAlignment="ALIGN_LEFT">
                    <g:Button ui:field="cancelBtn" addStyleNames="{style.wsButton}" text="Cancel" enabled="true"/>
                </g:cell>
            </g:HorizontalPanel>
            <div class="{style.footer}" ui:field="windowFooter">
                <g:HTMLPanel styleName="{style.statusBar}">
                    <g:Image resource="{resourceBundle.infoIcon}" styleName="{style.infoIcon}" ui:field="infoIcon" />
                    <g:Label ui:field="statusLabel" text="0 Analysis Window(s) Selected" styleName="{style.statusLabel}" />
                </g:HTMLPanel>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>