<?xml version="1.0" encoding="ASCII"?>
<web-app>


	<!-- HighCharts Exporting Servlet for printing/exporting charts -->
	<servlet>
		<servlet-name>HighChartsExporterServlet</servlet-name>
		<servlet-class>com.ericsson.eniq.events.common.server.chartexporter.HighChartsExporterServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HighChartsExporterServlet</servlet-name>
		<url-pattern>/highcharts/exporter</url-pattern>
	</servlet-mapping>


	<!-- Servlets required for running the UI in hosted mode locally against 
		real services, not used by the UI in production mode -->
	<servlet>
		<servlet-name>servicesProxyServlet</servlet-name>
		<servlet-class>com.ericsson.eniq.events.common.server.servicesproxy.ServicesProxyServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>servicesProxyServlet</servlet-name>
		<url-pattern>/EniqEventsUI/servicesProxy</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>com.ericsson.eniq.events.ui.server.listener.StartupListener
		</listener-class>
	</listener>

	<listener>
		<listener-class>com.ericsson.eniq.events.ui.server.listener.UserSessionTracker
		</listener-class>
	</listener>

	<filter>
		<filter-name>CacheFilter</filter-name>
		<filter-class>com.ericsson.eniq.events.ui.server.filter.CacheFilter
		</filter-class>
	</filter>

	<filter-mapping>
        <filter-name>CacheFilter</filter-name>
        <url-pattern>/resources/*</url-pattern>
        <url-pattern>/EniqEventsUI/js/*</url-pattern>
        <url-pattern>/EniqEventsUI/gwt/*</url-pattern>
        <url-pattern>/gxt/*</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.cache.js</url-pattern>
        <url-pattern>/EniqEventsUI/deferredjs/*</url-pattern>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
	<filter>
		<filter-name>UserLockoutFilter</filter-name>
		<filter-class>com.ericsson.eniq.events.ui.server.filter.UserLockoutFilter
		</filter-class>
		<init-param>
			<param-name>lockoutPageUrl</param-name>
			<param-value>/login/Login.jsp</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>UserLockoutFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Secure the application -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Secure All Resources</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>secure</role-name>
		</auth-constraint>
	</security-constraint>


	<!-- Unsecure some of the resource required by the login screen images etc, 
		Login Module resources -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Unsecure the login directory</web-resource-name>
			<description />
			<url-pattern>/LoginUI/*</url-pattern>
			<url-pattern>/login/*</url-pattern>
			<url-pattern>/resources/images/*</url-pattern>
			<url-pattern>/resources/icons/*</url-pattern>
		</web-resource-collection>
	</security-constraint>



	<!-- Session timeout interval in minutes -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>


	<!-- Define the login pages and error pages -->
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Eniq_Events</realm-name>
		<form-login-config>
			<form-login-page>/login/Login.jsp</form-login-page>
			<form-error-page>/login/Login.jsp?error=true</form-error-page>
		</form-login-config>
	</login-config>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>EniqEventsUI.jsp</welcome-file>
	</welcome-file-list>
</web-app>