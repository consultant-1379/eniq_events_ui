<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style
            type='com.ericsson.eniq.events.ui.client.dashboard.portlet.infopanels.PortletPercentPanel.PortletPercentStyle'>

        .container {
            margin-left: auto;
            margin-right: auto;
        }

        table.container > tbody > tr > td {
            font-family: Arial, serif;
            font-size: 12px;
        }

        table.container.showOnlyCurrentTotal > tbody > tr > td {
            display: none;
        }

        table.container.showOnlyCurrentTotal > tbody > tr > td:first-child {
            display: table-cell;
        }

        table.container > tbody > tr > td:first-child + td + td {
            font-size: 10px;
            padding-left: 5px;
        }

        table.container > tbody > tr > td:first-child + td {
            width: 30px;
        }

        table.noPaddingForIndicator > tbody > tr > td:first-child + td {
            width: auto;
        }
    </ui:style>

    <g:HorizontalPanel styleName="{style.container}">
        <g:Label ui:field="total"/>
        <g:cell verticalAlignment="middle" horizontalAlignment="right">
            <g:Image ui:field="indicator"/>
        </g:cell>
        <g:cell verticalAlignment="middle">
            <g:HTMLPanel>
                (<span ui:field="percent"/>%)
            </g:HTMLPanel>
        </g:cell>
    </g:HorizontalPanel>

</ui:UiBinder>