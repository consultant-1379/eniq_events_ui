<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.ericsson.eniq.events.widgets.client.dropdown"
	xmlns:e="urn:import:com.ericsson.eniq.events.ui.client.groupmanagement.component">
	<ui:with field='resourceBundle'
		type='com.ericsson.eniq.events.ui.client.groupmanagement.resources.GroupMgmtResourceBundle' />
	<ui:style>
		.wrapper {
			padding: 10px;
			height: 100%;
			-moz-box-sizing: border-box;
			-ms-box-sizing: border-box;
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
			-webkit-user-select: none;
			-moz-user-select: -moz-none;
			user-select: none;
			font-family: "Arial";
			font-size: 11px;
			color: #333333;
		}
		
		.groupNames {
			width: 360px;
		}

		.groupSelectionItem {
			width: 160px;
			font-size: 11px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.wrapper}" ui:field="groupManagementContainer">
		<g:HTMLPanel styleName="{resourceBundle.style.container}"
			addStyleNames="{style.groupNames}" ui:field="viewContainer">
			<div>
				<g:SimplePanel>
					<d:DropDown defaultText=" - Select Group type - "
								addStyleNames="{style.groupSelectionItem}"
								ui:field="groupTypeDropDown">
					</d:DropDown>
				</g:SimplePanel>
				<div class="{resourceBundle.style.separator}"></div>
			</div>
			<div>
				<div class="{resourceBundle.style.expandableListContainer}">
					<e:FilterPanel ui:field="groupNameFilterPanel"
						header="Group Name" addStyleNames="{resourceBundle.style.groupNameFilter}" />
				</div>
			</div>
			<div>
				<g:HorizontalPanel styleName="{resourceBundle.style.buttonHolder}">
					<g:cell horizontalAlignment="ALIGN_LEFT">
						<g:Button ui:field="newButton" text="New" enabled="false"></g:Button>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_RIGHT">
						<g:Button ui:field="editButton" text="Edit" enabled="false"></g:Button>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_RIGHT">
						<g:Button ui:field="deleteButton" text="Delete Selected"
							enabled="false"></g:Button>
					</g:cell>
				</g:HorizontalPanel>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 